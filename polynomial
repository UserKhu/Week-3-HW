#include<iostream>
using namespace std;
int main() {
	float A, B, C, t, dt, num, anal;
	//differentiation
	cout << "Enter A B C";
	cin >> A >> B >>C;
	cout << "Endter t dt";
	cin >> t >> dt;
	anal = 2 * a * t + b;
	num = (2 * a * (t+dt)) + b;
	cout << "num" << num << "anal" << anal << endl;
	cout << "error=" << (num - anal) / anal * 100 << "%\n";
	//integration
	float a, b;
	int N;
	cout << "Enter a b N";
	cin >> a >> b >> N;
	anal = A * (pow(b, 3) - pow(a, 3)) / 3 + B * (pow(b, 2) - pow(a, 2)) / 2 + C * (b - a);
	dx = (b - a) / N;
	num = 0;
	for (int i = 0; i < N;i++) {
		num += A * pow(a + dt * i, 2) * dx + B * (a + dt * i) * dt + C * dt;
	}
	cout << "num" << num << "anal" << anal << endl;
	cout << "error = " << (num - anal) / anal * 100 << "%\n";


}
